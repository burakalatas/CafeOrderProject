@model IEnumerable<TableInfo>

@{
    ViewData["Title"] = "Home Page";
}


<h2 style="text-align:center; margin-top:0.5em; margin-bottom:0.5em; color:#FAAB78;">Tables</h2>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                @if (item.TableId !=0)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p class="card-text" style="text-align:center;">Table @item.TableId</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" href="/Home/AddOrder/@item.TableId" class="btn btn-sm "><img src="~/images/order.svg" alt="" width="50px" height="50px"></a>
                                    </div>
                                    <div class="btn-group">
                                        <a type="button" href="/Home/SeeTableOrder/@item.TableId" class="btn btn-sm "><img src="~/images/detail.svg" alt="" width="50px" height="50px"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p class="card-text" style="text-align:center;">Online Orders</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" href="/Home/AddOrder/@item.TableId" class="btn btn-sm "><img src="~/images/online.svg" alt="" width="50px" height="50px"></a>
                                    </div>
                                    <div class="btn-group">
                                        <a type="button" href="/Home/SeeTableOrder/@item.TableId" class="btn btn-sm "><img src="~/images/detail.svg" alt="" width="50px" height="50px"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>